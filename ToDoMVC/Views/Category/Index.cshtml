@model IList<CategoryModel>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<a href="/Category/Create" class="btn btn-primary mb-3">Add New Category</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                <a href="/Category/Edit/@category.Id" class="btn btn-warning btn-sm">Edit</a>
                <a href="/Category/Delete/@category.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>